<?xml version="1.0"?>
<odoo>

	<record id="test_model_action" model="ir.actions.act_window">
    		<field name="name">Properties</field>
    		<field name="res_model">test.model</field>
    		<field name="view_mode">tree,form</field>
			<field name="help" type="html">
            	<p class="o_view_nocontent_smiling_face">
                	Create your first property!
            	</p>
        	</field>
	</record>

	<record id="test_model_view_tree" model="ir.ui.view">
        <field name="name">test.model.tree</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'offer_received'" decoration-muted="state=='sold'" decoration-success="state=='offer_accepted'" decoration-danger="state=='cancelled'">
    			<field name="name"/>
    			<field name="postcode"/>
				<field name="bedrooms"/>
				<field name="living_area"/>
				<field name="expected_price"/>
				<field name="selling_price"/>
				<field name="date_availability" optional="hide"/>
				<field name="property_type_id"/>
				<field name="state"/>
				<field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
			</tree>
        </field>
    </record>

	<record id="test_model_view_form" model="ir.ui.view">
        <field name="name">test.model.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Test">
				<header>
					<button id="button_new" name="action_new" string="New" class="btn-primary" states="cancelled" type="object"/>
                    <button id="button_received" name="action_received" string="Received" class="btn-primary" states="new" type="object"/>
                    <button id="button_accepted" name="action_accepted" string="Accept" class="btn-primary" states="offer_received" type="object"/>
					<button id="button_sold" name="action_sold" string="SOLD" class="btn-primary" states="offer_received,offer_accepted" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="CANCLE" class="btn-primary" states="new,offer_received,offer_accepted" type="object"/>
					<field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
				</header>
    			<sheet>
					<h1 class="mb32">
						<field name="name" class="mb16"/>
					</h1>
					<field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
					<group>
            			<group>
							<field name="property_type_id" widget="selection"/>
							<field name="postcode"/>
							<field name="date_availability"/>
            			</group>
						<group>
							<field name="expected_price"/>
							<field name="best_price" string="Best Offer"/>
							<field name="selling_price"/>
            			</group>
					</group>
					<group>
						<notebook>
                			<page string="Description">
								<group>
									<field name="description"/>
									<field name="bedrooms"/>
									<field name="living_area"/>
									<field name="facades"/>
									<field name="garage"/>
									<field name="garden"/>
									<field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
									<field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
									<field name="last_seen"/>
									<field name="active"/>
									<field name="total_area"/>
								</group>
							</page>
							<page string="Offers">
                                <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted','sold','cancelled'))]}"/>
							</page>
							<page string="Other Info">
								<group>
									<field name="seller_id"/>
									<field name="buyer_id"/>
								</group>
							</page>
            			</notebook>
        			</group>
    			</sheet>
			</form>
        </field>
    </record>

	<record id="view_test_model_search" model="ir.ui.view">
            <field name="name">test.model.search</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <search string="Tests">
					<field name="name"/>
    				<field name="last_seen"/>
					<field name="postcode"/>
              	 	<field name="expected_price"/>
               		<field name="bedrooms"/>
               		<field name="living_area"/>
               		<field name="facades"/>
					<field name="property_type_id"/>
					<separator/>
					<filter string="Available" name="state" domain="[('state', '=', 'new')]"/>

					<group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                    </group>
				</search>
            </field>
	</record>

	<menuitem id = "test_menu_root"
              name = "Test"
              sequence = "10"/>

    <menuitem id = "test_first_level_menu"
              name = "Advertisements"
              parent = "test_menu_root"
              sequence = "10"/>

    <menuitem id = "test_model_menu_action"
              name = "Properties"
              action = "test_model_action"
              parent = "test_first_level_menu"
              sequence = "10"/>



</odoo>